<Window x:Class="WpfMVVMDataGrid.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfMVVMDataGrid"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel>
        <StackPanel DockPanel.Dock="Right">
            <Button Name="btnAddUser" Click="btnAddUser_Click">Додати</Button>
            <Button Name="btnEditUser" Click="btnEditUser_Click">Редагувати</Button>
        </StackPanel>
        <DataGrid Name="dgUsers" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <!--створює колонку image-->
                <DataGridTemplateColumn Header="Image">
                    <!--шаблон для column-->
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <!--співставляємо елеменрт фото-->
                            <Image Width="50" Height="100" Source="{Binding Image}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <!--добавляємо колонку Name-->
                <DataGridTextColumn Header="Ім'я" 
                                    Binding="{Binding Name}" 
                                    MinWidth="200"
                                    MaxWidth="400" />
                <!--добавляємо колонку Phone-->
                <DataGridTextColumn Header="Телефон" 
                    Binding="{Binding Phone}" 
                    MinWidth="150"
                    MaxWidth="200" />

            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</Window>
